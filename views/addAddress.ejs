<%- include('header'); %>

  <div class="container">
    <form method="POST" action="add">
      <div class="form-group">
        <label>Register Number</label>
        <input type="text" class="form-control" name="regnum" placeholder="Register Number">
      </div>
      <div class="form-group">
        <label>City</label>
        <input type="text" class="form-control" name="city" placeholder="City">
      </div>
      <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" placeholder="Address">
      </div>
      <div class="form-group">
        <label>Floors</label>
        <input type="text" class="form-control" name="floors" placeholder="Floors">
      </div>
      <div class="form-group">
        <label>How many elevators</label>
        <input type="text" class="form-control" name="numberElevators" placeholder="How many elevators">
      </div>
      <div class="form-group">
        <label>Type Elevator</label>
        <select name="typeElevator">
            <% elevators.forEach((elevator) => { %>
            <option value="<%= elevator.type %>"><%= elevator.type %></option>  
            <% }) %> 
        </select>
      </div>
      <div class="form-group">
        <label>Ground Floor</label>
        <input type="checkbox" class="form-control" name="gfloor" id="gfloor" unchecked>
      </div>
      <div class="form-group">
        <label>Basement</label>
        <input type="checkbox" class="form-control" name="basement" id="basement">
      </div>
      <div class="form-group">
        <label>Is Active?</label>
        <input type="checkbox" class="form-control" name="isActive" id="isActive">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>

<%- include('footer'); %>