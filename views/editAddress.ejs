<%- include('header'); %>

  <div class="container">
    <form method="POST" action="<%= result._id %>?_method=PUT">
      <div class="form-group">
        <label>Register Number</label>
        <input type="text" class="form-control" name="regnum" placeholder="Register Number" value="<%= result.regnum %>">
      </div>
      <div class="form-group">
        <label>City</label>
        <input type="text" class="form-control" name="city" placeholder="City" value="<%= result.city %>">
      </div>
      <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" placeholder="Address" value="<%= result.address %>"> 
      </div>
      <div class="form-group">
        <label>Floors</label>
        <input type="text" class="form-control" name="floors" placeholder="Floors" value="<%= result.floors %>">
      </div>
      <div class="form-group">
        <label>How many elevators</label>
        <input type="text" class="form-control" name="numberElevators" placeholder="How many elevators" value="<%= result.numberElevators %>">
      </div>
      <div class="form-group">
        <label>Type Elevator</label>
        <select name="typeElevator">
            <% elevators.forEach((elevator) => { %>
            <option value="<%= elevator.type %>"><%= elevator.type %></option>  
            <% }) %> 
        </select>
      </div>
      <div class="form-group">
        <label>Ground Floor</label>
        <input type="checkbox" class="form-control" name="gfloor" <% if(result.gfloor){%> checked <% } else { %> unchecked <% } %>>
      </div>
      <div class="form-group">
        <label>Basement</label>
        <input type="checkbox" class="form-control" name="basement" <% if(result.basement){%> checked <% } %>>
      </div>
      <div class="form-group">
        <label>Is Active?</label>
        <input type="checkbox" class="form-control" name="isActive" <% if(result.isActive){%> checked <% } %>>
      </div>
      <button type="submit" class="btn btn-info">Update</button>
    </form>
  </div>

<%- include('footer'); %>